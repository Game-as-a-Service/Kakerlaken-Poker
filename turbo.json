{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "cache": false
    },
    "test:e2e": {},
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "typecheck": {},
    "start:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
